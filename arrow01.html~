<head>
<title> Arrow01 </title>    
</head>
    
<body>
Arrow
<br>
<canvas id="cv1" width="500" height="250" style="border:1px dashed #00c3c3"></canvas>

<script type="text/javascript">
"use strict"; 
    
var canvas, ctx; 
var x = 250;
var step = 1;
  
canvas = document.getElementById("cv1");
ctx = canvas.getContext("2d");

ctx.strokeStyle = "#ff0000";
ctx.lineWidth = 5
function loop() {
    
    ctx.clearRect(0, 0, canvas.width, canvas.height); 
    if (x > 350) {
        step = -step; 
    }
    if (x < 50) {
        step = -step; 
    }
    
    x = x + step; 
    
    ctx.beginPath(); 
    ctx.lineTo(200,200);
    ctx.lineTo(x,128-128*Math.cos(Math.abs((200-x)/128)));
    ctx.stroke ();  
    
    setTimeout(loop, 5); 
}
    
loop(); 
    
</script>


</body>    
    
</html>
